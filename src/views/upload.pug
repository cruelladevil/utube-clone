extends base

block content
  if errorMessage
    span=errorMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video File
    input(name="video", type="file" id="video", accept="video/*", required)
    input(name="title", type="text", placeholder="Title", maxlength=30, required)
    input(name="description", type="text", placeholder="Description", minlength=10, required)
    input(name="hashtags", type="text", placeholder="Hashtags divided with comma", required)
    input(type="submit" value="Upload")
