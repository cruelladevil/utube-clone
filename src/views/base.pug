doctype html
html(lang="ko")
  head
    title #{pageTitle} | Utube
  body
    header
      nav
        ul
          li
            a(href="/") Home
          li
            a(href="/search") Search
          if loggedIn
            li
              a(href="/videos/upload") Upload Video
            li
              a(href=`/users/${loggedInUser._id}`) My Profile
            li
              a(href="/users/edit") Edit Profile
            li
              a(href="/users/logout") Logout
          else
            li 
              a(href="/login") Login
            li
              a(href="/join") Join
      h1=pageTitle
    main
      block content
  include partials/footer
